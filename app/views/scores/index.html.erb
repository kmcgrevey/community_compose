<h1><%= @score.title %></h1>

<div id="embed-container"></div>
<script src="https://prod.flat-cdn.com/embed-js/v1.3.0/embed.min.js"></script>
<script>
  var container = document.getElementById("embed-container");
  var embed = new Flat.Embed(container, {
    "width": "100%",
    "height": "450",
    "score": "<%= @score.id %>",
    "embedParams": {
      "mode": "edit",
      "branding": false,
      "appId": "5ecd978ef0aa2b501cf8cf25"
    },
  });
  // You can now use the `embed` instance.
  // Check out the docs at https://flat.io/developers/docs/embed/javascript.html
</script>

<section class="collaborators">
  <h3>Collaborators</h3>
  <%= button_to 'Request to collaborate on this score', '/collaborate' if !@score.current_collaborator?(current_user.username) %>
  <ul>
  <% @score.collaborators.each do |collaborator| %>
    <li><p><%= collaborator[:user][:username] %></p></li>
  <% end %>
  </ul>
</section>
